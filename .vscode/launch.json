{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            // export PYTHONPATH=src
            //
            // pdm run main.py
            // or
            // py main.py
            "name": "Referral FastAPI",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py", // "${file}"
            "console": "integratedTerminal",
            "env": {"PYTHONPATH": "src"},
        },
        {
            // export PYTHONPATH=src
            //
            // pdm run celery -A src.adapters.celery.main:celery_app worker --loglevel=INFO
            // pdm run celery -A src.adapters.celery.main:celery_app worker --loglevel=INFO --pool=solo	(Windows)
            // or
            // celery -A src.adapters.celery.main:celery_app worker --loglevel=INFO --pool=solo
            "name": "Celery Worker",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/Scripts/celery.exe",
            "console": "integratedTerminal",
            "args": [
                "-A",
                "src.adapters.celery.main:celery_app",
                "worker",
                "--loglevel=INFO",
                "--pool=solo" // Windows
            ],
            "env": {"PYTHONPATH": "src"},
        },
        {   
            // export PYTHONPATH=src
            //
            // pdm run celery -A src.adapters.celery.main:celery_app flower
            // or
            // celery -A src.adapters.celery.main:celery_app flower
            "name": "Celery Flower",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/Scripts/celery.exe",
            "console": "integratedTerminal",
            "args": [
                "-A",
                "src.adapters.celery.main:celery_app",
                "flower"
            ],
            "env": {"PYTHONPATH": "src"},
        }
    ]
}